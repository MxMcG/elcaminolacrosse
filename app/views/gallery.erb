<div class="main-container" id="gallery">

  <div id="vanilla-slideshow-container">
      <div id="vanilla-slideshow">

          <div class="vanilla-slide">
              <img src="lax4.jpg" alt="slide1">
          </div>

          <div class="vanilla-slide">
              <img src="lax6.jpg" alt="slide2">
          </div>

          <div class="vanilla-slide">
              <img src="lax9.jpg" alt="slide3">
          </div>

          <div class="vanilla-slide">
